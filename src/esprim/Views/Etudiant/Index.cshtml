@model IEnumerable<mini.project.Models.Etudiant>

@{
    ViewData["Title"] = "Etudiant Management";
}

<div class="container py-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Etudiant Management</h3>
        </div>
        <div class="card-body">
            <!-- Create Form -->
            <h5>Create New Etudiant</h5>
            <form asp-action="Index" method="post">
                <input type="hidden" name="actionType" value="Create" />
                <div class="mb-3">
                    <label class="form-label" for="Nom">Nom</label>
                    <input type="text" class="form-control" id="Nom" name="Nom" required />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="Prenom">Prenom</label>
                    <input type="text" class="form-control" id="Prenom" name="Prenom" required />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="DateNaissance">Date Naissance</label>
                    <input type="date" class="form-control" id="DateNaissance" name="DateNaissance" required />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="NumInscription">Num Inscription</label>
                    <input type="text" class="form-control" id="NumInscription" name="NumInscription" required />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="Adresse">Adresse</label>
                    <input type="text" class="form-control" id="Adresse" name="Adresse" required />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="Mail">Mail</label>
                    <input type="email" class="form-control" id="Mail" name="Mail" required />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="Tel">Tel</label>
                    <input type="text" class="form-control" id="Tel" name="Tel" required />
                </div>

                <div class="mb-3">
                    <label for="CodeClasse" class="form-label">Classe</label>
                    <select class="form-control" id="CodeClasse" name="CodeClasse">
                        <option value="">-- Select Classe --</option>
                        @foreach (var classe in ViewBag.Classes as List<mini.project.Models.Classe>)
                        {
                            <option value="@classe.CodeClasse">@classe.NomClasse</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Create Etudiant</button>
            </form>

            <h5 class="mt-4">Existing Etudiants</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Code Etudiant</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Date Naissance</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var etudiant in Model)
                    {
                        <tr>
                            <td>@etudiant.CodeEtudiant</td>
                            <td>@etudiant.Nom</td>
                            <td>@etudiant.Prenom</td>
                            <td>@etudiant.DateNaissance.ToString("yyyy-MM-dd")</td>
                            <td>
                                <!-- Edit Form -->
                                <form asp-action="Index" method="post" style="display:inline;">
                                    <input type="hidden" name="actionType" value="Edit" />
                                    <input type="hidden" name="id" value="@etudiant.CodeEtudiant" />
                                    <input type="text" class="form-control form-control-sm" name="Nom" value="@etudiant.Nom" />
                                    <input type="text" class="form-control form-control-sm" name="Prenom" value="@etudiant.Prenom" />
                                    <button type="submit" class="btn btn-warning btn-sm">Save</button>
                                </form>

                                <!-- Delete Form -->
                                <form asp-action="Index" method="post" style="display:inline;">
                                    <input type="hidden" name="actionType" value="Delete" />
                                    <input type="hidden" name="id" value="@etudiant.CodeEtudiant" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
