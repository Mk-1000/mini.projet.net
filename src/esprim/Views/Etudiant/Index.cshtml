@model IEnumerable<mini.project.Models.Etudiant>

@{
    ViewData["Title"] = "Etudiant Management";
}

<div class="container py-4">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">
                <i class="fas fa-user-graduate me-2"></i> Etudiant Management
            </h3>
            <button class="btn btn-light" data-bs-toggle="modal" data-bs-target="#addEtudiantModal">
                <i class="fas fa-plus me-2"></i> Add New Etudiant
            </button>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Code</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Date Naissance</th>
                            <th>Classe</th>
                            <th>Email</th>
                            <th>Tel</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var etudiant in Model)
                        {
                            <tr>
                                <td>@etudiant.CodeEtudiant</td>
                                <td>@etudiant.Nom</td>
                                <td>@etudiant.Prenom</td>
                                <td>@etudiant.DateNaissance.ToShortDateString()</td>
                                <td>@etudiant.Classe?.NomClasse</td>
                                <td>@etudiant.Mail</td>
                                <td>@etudiant.Tel</td>
                                <td>
                                    <!-- Edit Button -->
                                    <button class="btn btn-warning btn-sm"
                                            data-bs-toggle="modal"
                                            data-bs-target="#editModal-@etudiant.CodeEtudiant">
                                        <i class="fas fa-edit"></i>
                                    </button>

                                    <!-- Delete Form -->
                                    <form asp-action="Delete" method="post" asp-route-id="@etudiant.CodeEtudiant" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this Etudiant?');">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>

                            <!-- Edit Modal -->
                            <div class="modal fade" id="editModal-@etudiant.CodeEtudiant" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header bg-warning">
                                            <h5 class="modal-title">Edit Etudiant</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <form asp-action="Edit" method="post">
                                            <div class="modal-body">
                                                <input type="hidden" name="CodeEtudiant" value="@etudiant.CodeEtudiant" />
                                                <div class="mb-3">
                                                    <label class="form-label">Nom</label>
                                                    <input type="text" class="form-control" name="Nom" value="@etudiant.Nom" required />
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Prenom</label>
                                                    <input type="text" class="form-control" name="Prenom" value="@etudiant.Prenom" required />
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Date Naissance</label>
                                                    <input type="date" class="form-control" name="DateNaissance" value="@etudiant.DateNaissance.ToString("yyyy-MM-dd")" required />
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Email</label>
                                                    <input type="email" class="form-control" name="Mail" value="@etudiant.Mail" required />
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Tel</label>
                                                    <input type="tel" class="form-control" name="Tel" value="@etudiant.Tel" required />
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Classe</label>
                                                    <select class="form-control" name="CodeClasse" required>
                                                        <option value="">-- Select Classe --</option>
                                                        @if (ViewBag.Classes != null)
                                                        {
                                                            foreach (var classe in ViewBag.Classes as SelectList)
                                                            {
                                                                <option value="@classe.Value">@classe.Text</option>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <option disabled>No classes available</option>
                                                        }
                                                    </select>

                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add Etudiant Modal -->
<div class="modal fade" id="addEtudiantModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Add New Etudiant</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Create" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Nom</label>
                        <input type="text" class="form-control" name="Nom" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Prenom</label>
                        <input type="text" class="form-control" name="Prenom" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Date Naissance</label>
                        <input type="date" class="form-control" name="DateNaissance" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="Mail" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tel</label>
                        <input type="tel" class="form-control" name="Tel" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Classe</label>
                        <select class="form-control" name="CodeClasse" required>
                            <option value="">-- Select Classe --</option>
                            @foreach (var classe in ViewBag.Classes as SelectList)
                            {
                                <option value="@classe.Value">@classe.Text</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Etudiant</button>
                </div>
            </form>
        </div>
    </div>
</div>
