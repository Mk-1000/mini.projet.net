@model IEnumerable<mini.project.Models.Etudiant>
@{
    ViewData["Title"] = "Etudiant Management";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">
                        <i class="fas fa-users me-2"></i>Etudiant Management
                    </h3>
                    <button class="btn btn-light" data-bs-toggle="modal" data-bs-target="#addEtudiantModal">
                        <i class="fas fa-plus me-2"></i>Add New Etudiant
                    </button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Code Etudiant</th>
                                    <th>Nom</th>
                                    <th>Prenom</th>
                                    <th>Date Naissance</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var etudiant in Model)
                                {
                                    <tr>
                                        <td>@etudiant.CodeEtudiant</td>
                                        <td>@etudiant.Nom</td>
                                        <td>@etudiant.Prenom</td>
                                        <td>@etudiant.DateNaissance.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            <button class="btn btn-warning btn-sm edit-btn" data-bs-toggle="modal" data-bs-target="#editEtudiantModal" data-id="@etudiant.CodeEtudiant" data-nom="@etudiant.Nom" data-prenom="@etudiant.Prenom" data-dn="@etudiant.DateNaissance.ToString("yyyy-MM-dd")" data-codeclasse="@etudiant.CodeClasse">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-danger btn-sm delete-btn" data-id="@etudiant.CodeEtudiant">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Etudiant Modal -->
    <div class="modal fade" id="addEtudiantModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Add New Etudiant</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="addEtudiantForm">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Nom</label>
                            <input type="text" class="form-control" name="Nom" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Prenom</label>
                            <input type="text" class="form-control" name="Prenom" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Date Naissance</label>
                            <input type="date" class="form-control" name="DateNaissance" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Classe</label>
                            <select class="form-control" name="CodeClasse" required>
                                <option value="">-- Select Classe --</option>
                                @foreach (var classe in ViewBag.Classes as List<mini.project.Models.Classe>)
                                {
                                    <option value="@classe.CodeClasse">@classe.NomClasse</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Create Etudiant</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Etudiant Modal -->
    <div class="modal fade" id="editEtudiantModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning text-white">
                    <h5 class="modal-title">Edit Etudiant</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="editEtudiantForm">
                    <div class="modal-body">
                        <input type="hidden" name="CodeEtudiant" id="editCodeEtudiant" />
                        <div class="mb-3">
                            <label class="form-label">Nom</label>
                            <input type="text" class="form-control" name="Nom" id="editNom" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Prenom</label>
                            <input type="text" class="form-control" name="Prenom" id="editPrenom" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Date Naissance</label>
                            <input type="date" class="form-control" name="DateNaissance" id="editDateNaissance" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Classe</label>
                            <select class="form-control" name="CodeClasse" id="editCodeClasse" required>
                                <option value="">-- Select Classe --</option>
                                @foreach (var classe in ViewBag.Classes as List<mini.project.Models.Classe>)
                                {
                                    <option value="@classe.CodeClasse">@classe.NomClasse</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // Edit Etudiant
            $('.edit-btn').on('click', function () {
                const etudiantId = $(this).data('id');
                const nom = $(this).data('nom');
                const prenom = $(this).data('prenom');
                const dateNaissance = $(this).data('dn');
                const codeClasse = $(this).data('codeclasse');
                $('#editCodeEtudiant').val(etudiantId);
                $('#editNom').val(nom);
                $('#editPrenom').val(prenom);
                $('#editDateNaissance').val(dateNaissance);
                $('#editCodeClasse').val(codeClasse);
            });

            // Submit Edit Etudiant Form
            $('#editEtudiantForm').on('submit', function (e) {
                e.preventDefault();
                const formData = $(this).serialize();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Edit", "Etudiant")',
                    data: formData,
                    success: function (response) {
                        alert(response.message);
                        location.reload();  // Reload page to reflect changes
                    }
                });
            });

            // Submit Add Etudiant Form
            $('#addEtudiantForm').on('submit', function (e) {
                e.preventDefault();
                const formData = $(this).serialize();
                console.log(formData);  // Log the form data for debugging
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Create", "Etudiant")',
                    data: formData,
                    success: function (response) {
                        alert(response.message);
                        location.reload();  // Reload page to reflect changes
                    }
                });
            });


            // Delete Etudiant
            $('.delete-btn').on('click', function () {
                const etudiantId = $(this).data('id');
                if (confirm("Are you sure you want to delete this Etudiant?")) {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("Delete", "Etudiant")',
                        data: { id: etudiantId },
                        success: function (response) {
                            alert(response.message);
                            location.reload();  // Reload page to reflect changes
                        }
                    });
                }
            });
        });
    </script>
}
