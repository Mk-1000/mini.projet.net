@model mini.project.Models.Classe

<h1>Mark Absence for Class: @Model.NomClasse</h1>

<form method="post" action="@Url.Action("MarkAbsence", "FicheAbsence")">
    <input type="hidden" name="classeId" value="@Model.CodeClasse" />

    @foreach (var student in Model.Etudiants)
    {
        <div>
            <label>@student.Nom @student.Prenom</label>
            <input type="checkbox" name="etudiantIds" value="@student.CodeEtudiant" /> Absent
            <input type="hidden" name="matiereId" value="@Model.CodeMatiere" /> <!-- Assuming the class has a subject linked -->
            <input type="hidden" name="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        </div>
    }

    <button type="submit">Mark Absence</button>
</form>
