@model IEnumerable<mini.project.Models.FicheAbsence>

@{
    ViewData["Title"] = "Fiche Absence Management";
}

<div class="container-fluid py-4">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between">
            <h3 class="mb-0">Fiche Absence Management</h3>
            <button class="btn btn-light" data-bs-toggle="modal" data-bs-target="#addFicheAbsenceModal">
                <i class="fas fa-plus"></i> Add New FicheAbsence
            </button>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Date</th>
                        <th>Matière</th>
                        <th>Enseignant</th>
                        <th>Classe</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var fiche in Model)
                    {
                        <tr>
                            <td>@fiche.CodeFicheAbsence</td>
                            <td>@fiche.DateJour.ToShortDateString()</td>
                            <td>@fiche.Matiere?.NomMatiere</td>
                            <td>@fiche.Enseignant?.Nom</td>
                            <td>@fiche.Classe?.NomClasse</td>
                            <td>
                                <!-- Edit Button -->
                                <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal-@fiche.CodeFicheAbsence">
                                    <i class="fas fa-edit"></i>
                                </button>

                                <!-- Delete Form -->
                                <form asp-action="Delete" method="post" asp-route-id="@fiche.CodeFicheAbsence" class="d-inline" onsubmit="return confirm('Are you sure?');">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>

                        <!-- Edit Modal -->
                        <div class="modal fade" id="editModal-@fiche.CodeFicheAbsence" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form asp-action="Edit" method="post">
                                        <div class="modal-header bg-warning text-white">
                                            <h5 class="modal-title">Edit FicheAbsence</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <input type="hidden" name="CodeFicheAbsence" value="@fiche.CodeFicheAbsence" />
                                            <div class="mb-3">
                                                <label>Date</label>
                                                <input type="date" name="DateJour" value="@fiche.DateJour.ToString("yyyy-MM-dd")" class="form-control" required />
                                            </div>
                                            <div class="mb-3">
                                                <label>Matière</label>
                                                <select name="CodeMatiere" class="form-control" asp-items="ViewBag.MatiereList"></select>
                                            </div>
                                            <div class="mb-3">
                                                <label>Enseignant</label>
                                                <select name="CodeEnseignant" class="form-control" asp-items="ViewBag.EnseignantList"></select>
                                            </div>
                                            <div class="mb-3">
                                                <label>Classe</label>
                                                <select name="CodeClasse" class="form-control" asp-items="ViewBag.ClasseList"></select>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-primary">Save Changes</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Modal -->
<div class="modal fade" id="addFicheAbsenceModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Create" method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Add New FicheAbsence</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label>Date</label>
                        <input type="date" name="DateJour" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Matière</label>
                        <select name="CodeMatiere" class="form-control" asp-items="ViewBag.MatiereList"></select>
                    </div>
                    <div class="mb-3">
                        <label>Enseignant</label>
                        <select name="CodeEnseignant" class="form-control" asp-items="ViewBag.EnseignantList"></select>
                    </div>
                    <div class="mb-3">
                        <label>Classe</label>
                        <select name="CodeClasse" class="form-control" asp-items="ViewBag.ClasseList"></select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>
