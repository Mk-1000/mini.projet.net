@model IEnumerable<mini.project.Models.FicheAbsence>

@{
    ViewData["Title"] = "Fiche Absence Management";
}

<div class="container-fluid py-4">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between">
            <h3 class="mb-0">Fiche Absence Management</h3>
            <button class="btn btn-light" data-bs-toggle="modal" data-bs-target="#addFicheAbsenceModal">
                <i class="fas fa-plus"></i> Add New FicheAbsence
            </button>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Date</th>
                        <th>Matière</th>
                        <th>Enseignant</th>
                        <th>Classe</th>
                        <th>Seances</th>
                        <th>Absent Students</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var fiche in Model)
                    {
                        <tr>
                            <td>@fiche.CodeFicheAbsence</td>
                            <td>@fiche.DateJour.ToShortDateString()</td>
                            <td>@fiche.Matiere?.NomMatiere</td>
                            <td>@fiche.Enseignant?.Nom</td>
                            <td>@fiche.Classe?.NomClasse</td>
                            <td>
                                @foreach (var seance in fiche.FichesAbsenceSeances)
                                {
                                    <div>
                                        <b>Seance:</b> @seance.Seance?.NomSeance
                                        <br />
                                        <b>Absent Students:</b>
                                        <ul>
                                            @foreach (var ligne in seance.LignesFicheAbsence)
                                            {
                                                @if (ligne.IsAbsent)
                                                {
                                                    <li>@ligne.Etudiant?.Nom</li>
                                                }
                                            }
                                        </ul>
                                    </div>
                                }
                            </td>
                            <td>
                                <!-- Add Seance Button -->
                                <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#addSeanceModal-@fiche.CodeFicheAbsence">
                                    <i class="fas fa-plus"></i> Add Seance
                                </button>

                                <!-- Add Absent Students Button -->
                                <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#assignStudentsModal-@fiche.CodeFicheAbsence">
                                    <i class="fas fa-users"></i> Assign Students
                                </button>
                            </td>
                        </tr>

                        <!-- Add Seance Modal -->
                        <div class="modal fade" id="addSeanceModal-@fiche.CodeFicheAbsence" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form asp-action="AddSeance" method="post">
                                        <input type="hidden" name="CodeFicheAbsence" value="@fiche.CodeFicheAbsence" />
                                        <div class="modal-header bg-success text-white">
                                            <h5 class="modal-title">Add Seance</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="mb-3">
                                                <label>Seance</label>
                                                <select name="CodeSeance" class="form-control" asp-items="ViewBag.SeanceList"></select>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-primary">Add</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Assign Students Modal -->
                        <div class="modal fade" id="assignStudentsModal-@fiche.CodeFicheAbsence" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form asp-action="AssignStudents" method="post">
                                        <input type="hidden" name="CodeFicheAbsenceSeance" value="@fiche.CodeFicheAbsence" />
                                        <div class="modal-header bg-info text-white">
                                            <h5 class="modal-title">Assign Absent Students</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="mb-3">
                                                <label>Select Students</label>
                                                <select name="CodeEtudiants" class="form-control" multiple>
                                                    @if (ViewData["StudentList"] != null)
                                                    {
                                                        var studentList = ViewData["StudentList"] as SelectList;
                                                        if (studentList != null)
                                                        {
                                                            @foreach (var student in studentList)
                                                            {
                                                                <option value="@student.Value">@student.Text</option>
                                                            }
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-primary">Assign</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Modal -->
<div class="modal fade" id="addFicheAbsenceModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Create" method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Add New FicheAbsence</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label>Date</label>
                        <input type="date" name="DateJour" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Matière</label>
                        <select name="CodeMatiere" class="form-control" asp-items="ViewBag.MatiereList"></select>
                    </div>
                    <div class="mb-3">
                        <label>Enseignant</label>
                        <select name="CodeEnseignant" class="form-control" asp-items="ViewBag.EnseignantList"></select>
                    </div>
                    <div class="mb-3">
                        <label>Classe</label>
                        <select name="CodeClasse" class="form-control" asp-items="ViewBag.ClasseList"></select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Show loading spinner when form is submitted
        $(document).ready(function() {
            $('form').submit(function() {
                var formId = $(this).attr('id');
                $('#loading-spinner-' + formId.split('-')[1]).show();
            });
        });
    </script>
}