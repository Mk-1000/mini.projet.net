@model List<mini.project.Models.LigneFicheAbsence>

<h1>Total Absences Report</h1>

<form method="get">
    <label for="startDate">Start Date:</label>
    <input type="date" id="startDate" name="startDate" />
    <label for="endDate">End Date:</label>
    <input type="date" id="endDate" name="endDate" />
    <button type="submit">Generate Report</button>
</form>

@if (Model != null && Model.Any())
{
    <h3>Absences from @ViewData["StartDate"] to @ViewData["EndDate"]</h3>
    <table>
        <thead>
            <tr>
                <th>Student</th>
                <th>Subject</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var absence in Model)
            {
                <tr>
                    <td>@absence.Etudiant.Nom @absence.Etudiant.Prenom</td>
                    <td>@absence.FicheAbsence.Matiere.NomMatiere</td>
                    <td>@absence.FicheAbsence.DateJour.ToShortDateString()</td>
                    <td>@(absence.IsAbsent ? "Absent" : "Present")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No absences found for the selected period.</p>
}

<!-- Add a button to navigate to the "Mark Absence" page -->
<a href="@Url.Action("MarkAbsence", "FicheAbsence", new { classeId = 1 })" class="btn btn-primary">Mark Absence</a>
